<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingTop="14dp"
    android:elevation="5dp"
    android:background="#fff"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_note_title"
        android:id="@+id/item_note_title"
        android:textSize="@dimen/item_note_title"
        android:textStyle="bold"/>

    <TextView
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:layout_alignParentEnd="true"
        android:id="@+id/item_note_data"
        android:textSize="12sp"
        android:layout_alignTop="@id/item_note_title"
        android:textStyle="normal"/>

    <TextView
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_note_description"
        android:textStyle="italic"
        android:layout_below="@id/item_note_title"
        android:id="@+id/item_note_description"
        android:textSize="@dimen/item_note_description"
        android:layout_marginBottom="14dp"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#20000000"
        android:layout_below="@id/item_note_description"></View>
</RelativeLayout>